<%= render "shared/header" %>

  <body style="padding-top: 5rem">
    <%= render "shared/nav" %>
    <div class="container text-center mb-4">
      <% if current_user %>
        <div class="my-2">
          <small class="text-info">[<%= current_user.name %> さんログイン中 / 所持ポイント：<%= current_user.point %> pts]</small>
        </div>
      <% end %>
      <% if flash.notice %>
        <div class="alert alert-success"><%= flash.notice %></div>
      <% end %>
      <%= yield %>

      <%#= render "shared/footer" %>
    </div>
    

  </body>
</html>
