  <%= render "shared/header" %>
  <body class="body-color">
    <%= render "shared/nav" %>
    <div class="container text-center mb-4">
       <div class="mb-3">
        <small class="text-chocolate">
          <% if current_user %>
            <div class="mb-3">
              <small class="text-info">[<%= current_user.name %> さんログイン中]</small>
              <% if !current_user.admin? %>
                <p class="mt-2">
                  <%= image_tag "https://cdn.with.is/assets/shared/icons/point-13022b529ea3220c018a44897946eab5913d018375c5f482c11452b24a92b2bc.svg", width: "25" %><br /><span class="font-weight-bold lead"><%= current_user.point %></span> ポイント
                </p>
              <% end %> 
            </div>
          <% end %> 
        </small>
      </div>
      <% if flash.notice %>
        <div class="alert alert-light"><%= flash.notice %></div>
      <% end %>

      <%= yield %>

    </div>
  </body>
  <%= render "shared/footer" %>
</html>
